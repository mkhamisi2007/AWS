{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowStartBuildOnSpecificProject",
      "Effect": "Allow",
      "Action": [
        "codebuild:StartBuild",
        "codebuild:BatchGetBuilds",
        "codebuild:BatchGetProjects"
      ],
      "Resource": "arn:aws:codebuild:us-east-1:11111111111:project/my-build"
    }
  ]
}
